<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
        <servlet-name>bbs-list-servlet</servlet-name>
        <servlet-class>BBS.BBSListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bbs-list-servlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>rent-servlet</servlet-name>
        <servlet-class>BBS.BBSRentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>rent-servlet</servlet-name>
        <url-pattern>/rent</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>return-servlet</servlet-name>
        <servlet-class>BBS.BBSReturnServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>return-servlet</servlet-name>
        <url-pattern>/return</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>add-servlet</servlet-name>
        <servlet-class>BBS.BBSAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add-servlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>join-servlet</servlet-name>
        <servlet-class>BBS.JoinServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>join-servlet</servlet-name>
        <url-pattern>/join</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>BBS.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>member-info-servlet</servlet-name>
        <servlet-class>BBS.InfoListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>member-info-servlet</servlet-name>
        <url-pattern>/MemberInfo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>detail-view-servlet</servlet-name>
        <servlet-class>BBS.BookDetail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>detail-view-servlet</servlet-name>
        <url-pattern>/DetailView</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>login-check-filter</filter-name>
        <filter-class>filter.LoginCheckFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>login-check-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>XSS</filter-name>
        <filter-class>filter.CrossScriptingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>XSS</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>